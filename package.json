{
  "name": "dingxiong.github.io",
  "packageManager": "yarn@4.0.2",
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0"
  },
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write '_posts/*'"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,html,json,yaml,css}": "prettier --write",
    "*.md": [
      "prettier --write"
    ]
  }
}
